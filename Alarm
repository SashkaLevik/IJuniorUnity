using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.Events;

public class Alarm : MonoBehaviour
{
    private House _house;
    private AudioSource _audioSource;
    private float _speedVolumeChange = 0.002f;
    private float _minAlarmVolume = 0;
    private float _maxAlarmVolume = 1;
    private Coroutine _riseVolume;
    private Coroutine _reduceVolume;


    private void Start()
    {
        _audioSource = GetComponent<AudioSource>();
        _audioSource.volume = _minAlarmVolume;
    }

    private void OnEnable()
    {
        _house = GetComponent<House>();
        _house.Breached += StartRiseVolume;
        _house.Breached += StartReduceVolume;
    }

    private void OnDisable()
    {
        _house.Breached -= StartRiseVolume;
        _house.Breached -= StartReduceVolume;
    }
    // почему не работает так? зачем делать UnityAction<bool> если уже есть IsBreached к которому можно обращаться?
    private void StartRiseVolume()
    {
        if (_house.IsBreached == true)
        {
            _riseVolume = StartCoroutine(RiseVolume());
        }
    }

    private void StartReduceVolume()
    {
        if (_house.IsBreached == false)
        {
            StopCoroutine(RiseVolume());
        }
        _reduceVolume = StartCoroutine(ReduceVolume());
    }

    private IEnumerator RiseVolume()
    {
        while (_audioSource.volume < 1)
        {
            _audioSource.volume = Mathf.MoveTowards(_audioSource.volume, _maxAlarmVolume, _speedVolumeChange);
            yield return null;
        }
    }

    public IEnumerator ReduceVolume()
    {
        while (_audioSource.volume > 0)
        {
            _audioSource.volume = Mathf.MoveTowards(_audioSource.volume, _minAlarmVolume, _speedVolumeChange);
            yield return null;
        }
    }
}
